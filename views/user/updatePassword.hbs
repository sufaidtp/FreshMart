{{> userheader}}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" rel="stylesheet">
</head>

<body>


        <style>
        .menu {
            background-color: #3F8D56;
        }

        .border-right {
            margin-top: 10%;
        }

        .form-control {
            font-size: medium;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8;
        }

        .profile-button {
            background: rgb(99, 39, 120);
            box-shadow: none;
            border: none;
        }

        .profile-button:hover {
            background: #682773;
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none;
        }

        .border-right {
            margin-top: 6%;
            margin-left: 324px;
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none;
        }

        .back:hover {
            color: #682773;
            cursor: pointer;
        }

        .labels {
            font-size: 13px;
        }

        .add-experience:hover {
            background: #BA68C8;
            color: #fff;
            cursor: pointer;
            border: solid 1px #BA68C8;
        }

        .labels {
            font-size: medium;
        }

        #top-page {
            margin-top: -100px;
        }
          /* Ensure no text decoration for links and headings */
        a,
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            text-decoration: none !important;
        }
    </style>

    <div class="container rounded bg-white mt-5 mb-5" style="margin-left: 11%;">
        <div class="row">
            <div class="col-md-3 border-right">
                <!-- User Profile Image and Info can go here -->
            </div>
            <div class="container mt-5">
                <div class="col-md-5 border-right">
                    <div id="top-page" class="p- py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="text-right">Password Settings</h2>
                        </div>
                        <form action="/updatePassword" method="post" id="passwordForm">
                            <div class="row mt-3">
                                <div class="col-md-12">
                                    <label class="labels" for="currentPassword">Current Password</label>
                                    <div class="input-group">
                                        <input type="password" name="password" class="form-control" id="currentPassword">
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-outline-secondary toggle-password" data-toggle="#currentPassword">Show</button>
                                        </div>
                                    </div>
                                    <span id="msg1" style="color: rgb(245, 29, 29);">{{msg1}}</span>
                                </div>
                                <div class="col-md-12">
                                    <label class="labels" for="newPassword">New Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" name="npass" id="newPassword">
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-outline-secondary toggle-password" data-toggle="#newPassword">Show</button>
                                        </div>
                                    </div>
                                    <span id="msg2" style="color: rgb(245, 29, 29);">{{msg2}}</span>
                                </div>
                                <div class="col-md-12">
                                    <label class="labels" for="confirmPassword">Confirm Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" name="cpass" id="confirmPassword">
                                        <div class="input-group-append">
                                            <button type="button" class="btn btn-outline-secondary toggle-password" data-toggle="#confirmPassword">Show</button>
                                        </div>
                                    </div>
                                    <span id="msg3" class="text-danger">{{msg3}}</span>
                                </div>
                            </div>
                            <div class="mt-5 text-center">
                                <button class="btn btn-primary profile-button" type="submit">Confirm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Additional Content can go here -->
            </div>
        </div>
    </div>



</body>
<script>
    const msg1 = document.getElementById('msg1')
    setTimeout(() => {
        msg1.style.display = " none"
    }, 5000)
    const msg2 = document.getElementById('msg2')
    setTimeout(() => {
        msg2.style.display = " none"
    }, 5000)

    const msg = document.getElementById('msg3')
    setTimeout(() => {
        msg.style.display = " none"
    }, 5000)
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleButtons = document.querySelectorAll('.toggle-password');

        toggleButtons.forEach(button => {
            button.addEventListener('click', function () {
                const input = document.querySelector(this.getAttribute('data-toggle'));
                if (input.type === 'password') {
                    input.type = 'text';
                    this.textContent = 'Hide';
                } else {
                    input.type = 'password';
                    this.textContent = 'Show';
                }
            });
        });
    });
</script>

