        <div class="page-content">
            <!-- Page Header-->
            <div class="page-header no-margin-bottom">
                <div class="container-fluid">
                    <h2 class="h5 no-margin-bottom">Orders</h2>
                </div>
            </div>
            <!-- Breadcrumb-->
            {{!-- <div class="container-fluid">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">User Details</a></li>
                    <li class="breadcrumb-item active">Basic forms </li>
                </ul>
            </div> --}}

            <div class="container-fluid m-2 pd-2">

            </div>

            <div class="container mt-5 p-5">
                <div class="row">

                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>status</th>
                                <th>Details</th>

                            </tr>
                        </thead>
                        {{#each data.products}}

                        <tbody>
                            <form action="/admin/changeStatus?id={{this._id}}&&orderId={{@root.data.orderID}}"
                                method="post">

                                <tr>
                                    <td><img src="/{{this.image}}" alt="" style="height: 60px;width:60px"></td>
                                    <td>{{this.product}}</td>
                                    <td>{{this.price}}</td>
                                    <td>{{this.quentity}}</td>

                                    <td>
                                        {{#ifEquals this.username 'Placed'}}

                                        <select class="form-select" aria-label="Default select example"
                                            style="color: green;" name="status">
                                            <option style="color: green;"> {{this.username}}</option>
                                            <option value="Shipped" style="color: green;">Shipped</option>
                                            <option value="Out for delivery" style="color: green;">Out for delivery
                                            </option>
                                            <option value="Delivered Successfully" style="color: green;">Delivered
                                                Successfully</option>
                                        </select>

                                        {{else ifEquals this.username 'Shipped'}}
                                        <select class="form-select" aria-label="Default select example"
                                            style="color: green;" name="status">
                                            <option value="Shipped" style="color: green;">Shipped</option>
                                            <option value="Out for delivery" style="color: green;">Out for delivery
                                            </option>
                                            <option value="Delivered Successfully" style="color: green;">Delivered
                                                Successfully</option>
                                        </select>
                                        {{else ifEquals this.username 'Out for delivery'}}
                                        <select class="form-select" aria-label="Default select example"
                                            style="color: green;" name="status">
                                            <option value="Out for delivery" style="color: green;">Out for delivery
                                            </option>
                                            <option value="Delivered Successfully" style="color: green;">Delivered
                                                Successfully</option>
                                        </select>
                                        {{else}}
                                        <p>{{this.username}}</p>
                                        {{/ifEquals}}


                                    </td>
                                    {{#if this.return_Reason}}
                                    <td><a href="/admin/returnView?id={{@root.data.orderID}}"
                                            class="btn btn-primary">Return Details</a></td>
                                    {{else}}
                                    {{#ifNotEquals this.username "cancelled"}}
                                    <td> <button type="submit">Update</button></td>
                                    {{/ifNotEquals}}
                                    {{/if}}





                                </tr>
                            </form>
                        </tbody>
                        {{/each}}

                    </table>

